
<%= render "/posts/header" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="form-div">
  <h2>Sign up</h2>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :email, :class => "field-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "field-input" %>
  </div>

  <div class="field">
    <%= f.label :password, :class => "field-label" %>
    <% if @minimum_password_length %>
    <em class = "field-em">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", :class => "field-input" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, :class => "field-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , :class => "field-input"%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", :class => "field-submit" %>
  </div>
<% end %>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= render "devise/shared/links" %>
</div>