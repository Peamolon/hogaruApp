<%= render "/posts/header" %>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-div">
    <h2>Log in</h2>
    <div class="field">
      <%= f.label :email, :class => "field-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "field-input" %>
    </div>
  
    <div class="field">
      <%= f.label :password, :class => "field-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", :class => "field-input" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  
    <div class="actions">
      <%= f.submit "Log in", :class => "field-submit" %>
    </div>
 
  <% end %>
  <%= render "devise/shared/links" %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
 </div>

